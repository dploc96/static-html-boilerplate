{
  "name": "html-boilerplate",
  "version": "1.0.0",
  "author": "W3S Team",
  "private": true,
  "description": "Static HTML Boilerplate",
  "main": "index.js",
  "scripts": {
    "serve": "webpack-dev-server --config webpack.config.dev.js",
    "start": "webpack --config webpack.config.prod.js && http-server ./dist -o",
    "build": "webpack --config webpack.config.prod.js",
    "lint:js": "./node_modules/.bin/eslint src/js/*.js",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "lint:html": "htmlhint ./src/**/*.html",
    "lint": "npm run lint:js && npm run lint:styles && npm run lint:html",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.7.4",
    "autoprefixer": "^9.1.5",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.20.2",
    "file-loader": "^5.0.2",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^3.0.0",
    "htmlhint": "^1.1.4",
    "http-server": "^0.12.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "raw-loader": "^4.0.1",
    "sass": "^1.50.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.0.1",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^19.0.0",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "lint-staged": {
    "src/**/*.{scss,js,html}": [
      "npm run lint"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
